<div class="recipe-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">レシピ登録</h1>
        <%= form_for @recipe do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_area :title, class: 'form-control', placeholder: '必須項目'%>
          </div>
          
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image%>
            ファイル種類：jpg jpeg gif png（5MB以内）
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          <% if logged_in? %>
            <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
          <% else %>
            <%= link_to 'レシピ登録にはログインが必要です', login_path %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>