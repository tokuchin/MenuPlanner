<h1>献立</h1>
<%= @date %>

<div class="recipe-index-wrapper">
  <div class="container">
    <% @menus.each do |menu| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="recipe-index-single">
            <h2 class="recipe-title">
              <%= menu.recipe.title %>
            </h2>            
            <h2 class="recipe-author">
              by <%= menu.recipe.user.name %>　さん
            </h2>
            <%= image_tag menu.recipe.image.url %>
            <%= menu.recipe.description %>
            
            <div>
            <% if menu.comments.present? %>
              <p class="comment">
                <%= "家族コメント" %>
              </p>
              <ul class="comment-description">
                <% menu.comments.each do |comment| %>
                  <li><%= comment.description %> by <%= comment.user.name %> さん</li>
                <% end %>   
              </ul>
            <% end %>
            <%= link_to '家族コメント登録はこちら', new_comment_path(menu_id: menu.id) %>
            </div>
            
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

